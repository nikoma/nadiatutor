<h1>Listing games</h1>

<table>
  <tr>
    <th>Questions</th>
    <th>Correct</th>
    <th>Wrong</th>
    <th>Points</th>
    <th>Range</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.questions %></td>
    <td><%= game.correct %></td>
    <td><%= game.wrong %></td>
    <td><%= game.points %></td>
    <td><%= game.difficulty_id %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

